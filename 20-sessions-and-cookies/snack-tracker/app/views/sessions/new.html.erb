<h1>Login</h1>

<% if flash["error"] %>
    <div><%= flash["error"] %></div>
<% end %>

<%= form_tag "/login" do %>
    <%= label_tag :username, "Username" %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>
<% end %>