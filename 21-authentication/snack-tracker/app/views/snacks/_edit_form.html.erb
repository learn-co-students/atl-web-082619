<%= form_for @snack do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
    <%= f.label :calories %>
    <%= f.number_field :calories, step: 50 %>
    <%= f.label :deliciousness %>
    <%= f.select :deliciousness, (1..10) %>
    <%= f.label :retailer %>
    <%= f.collection_select(:retailer_id, Retailer.all, :id, :name, prompt: true) %>

    <%= f.submit "Snackify" %>
<% end %>